<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Utilizamos el recyclerview que implementamos como dependencia en el gradle
        recyclerview nos permite reciclar vistas d una lista
        match-parent: ocupa el tamano de la pantalla, puediendo ser toda la pantalla a lo ancho y largo
    -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerrecetas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>